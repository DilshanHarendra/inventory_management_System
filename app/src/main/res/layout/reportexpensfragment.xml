<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:background="#fff">

    <EditText
        android:id="@+id/startDate"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:textSize="14dp"

        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/text_area"
        android:ems="10"
        android:drawableRight="@drawable/start_date"
        android:hint="Start Date"
        android:textAlignment="center"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/endDate"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/endDate"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:textSize="14dp"
        android:layout_marginStart="20dp"
        android:drawableRight="@drawable/start_date"

        android:layout_marginTop="32dp"
        android:hint="End Date"
        android:textAlignment="center"
        android:background="@drawable/text_area"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/createExpenss"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/startDate"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/createExpenss"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/cancelbtn_style"
        android:text="Create"
        android:textColor="#ffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/endDate"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
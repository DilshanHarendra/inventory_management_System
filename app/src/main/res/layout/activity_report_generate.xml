<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/repot_generetor_main_background"
    tools:context=".ReportGenerate">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/repotgenerator_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="@string/report_generator"
                android:textColor="#FCFFFF"
                android:textSize="24sp"

                android:textStyle="bold" />

            <Button
                android:id="@+id/back_btn"
                android:drawableRight="@drawable/ic_baseline_arrow_back_24"

                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/back_button_style" />

            <FrameLayout
                android:background="@drawable/form_background"

                android:id="@+id/fragment_container"
                android:layout_width="371dp"
                android:layout_height="580dp"
                android:layout_above="@+id/botton_navigator"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="86dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="65dp">

            </FrameLayout>

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/botton_navigator"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:itemIconTint="#ffffff"
                app:itemTextColor="#ffffff"
                android:background="@android:color/holo_blue_light"
                android:layout_alignParentBottom="true"
                app:menu="@menu/bottom_navigation_menu" />

        </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>